{
  "kind": "collectionType",
  "collectionName": "conversations",
  "info": {
    "singularName": "conversation",
    "pluralName": "conversations",
    "displayName": "Chat Conversation"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "participants": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "conversations"
    },
    "messages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::chat.message",
      "mappedBy": "conversation"
    },
    "isGroupChat": {
      "type": "boolean",
      "default": false
    },
    "name": {
      "type": "string"
    },
    "lastMessageAt": {
      "type": "datetime"
    }
  }
}