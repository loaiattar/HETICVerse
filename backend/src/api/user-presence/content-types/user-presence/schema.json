{
  "kind": "collectionType",
  "collectionName": "user_presences",
  "info": {
    "singularName": "user-presence",
    "pluralName": "user-presences",
    "displayName": "User Presence"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "status": {
      "type": "enumeration",
      "enum": ["online", "offline", "away", "busy"],
      "default": "offline"
    },
    "lastActive": {
      "type": "datetime",
      "required": true
    },
    "currentActivity": {
      "type": "string"
    },
    "device": {
      "type": "string"
    }
  }
}