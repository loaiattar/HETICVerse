{
  "kind": "collectionType",
  "collectionName": "community_invitations",
  "info": {
    "singularName": "community-invitation",
    "pluralName": "community-invitations",
    "displayName": "Community Invitation"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "community": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::community.community"
    },
    "inviter": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "invitee": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "accepted", "rejected"],
      "default": "pending"
    },
    "message": {
      "type": "text"
    },
    "expiresAt": {
      "type": "datetime"
    }
  }
}