{
  "kind": "collectionType",
  "collectionName": "ratings",
  "info": {
    "singularName": "rating",
    "pluralName": "ratings",
    "displayName": "Rating",
    "description": "User ratings for posts"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "score": {
      "type": "integer",
      "min": 1,
      "max": 5,
      "required": true
    },
    "comment": {
      "type": "text"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "post": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::post.post"
    }
  }
}