{
  "kind": "collectionType",
  "collectionName": "messages",
  "info": {
    "singularName": "message",
    "pluralName": "messages",
    "displayName": "Chat Message"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "sender": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "conversation": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::chat.conversation",
      "inversedBy": "messages"
    },
    "content": {
      "type": "text"
    },
    "readBy": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user"
    },
    "attachments": {
      "allowedTypes": [
        "images",
        "files"
      ],
      "type": "media",
      "multiple": true
    }
  }
}